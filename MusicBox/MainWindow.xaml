<Window x:Class="MusicBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicBox"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Playlists -->
        <StackPanel Grid.Column="0" Margin="5">
            <Label Content="Add From URL"/> <TextBox KeyDown="AddFromURL_KeyDown" />
            <Label Content="New Playlist"/> <TextBox KeyDown="NewPlaylist_KeyDown" />
            
            <Label Content="Playlists:"/>
            <ListBox Name="Playlists" SelectionChanged="Playlists_SelectionChanged" Margin="5,10,0,0" />
        </StackPanel>

        <!-- Playlist Contents -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <Grid Name="ImageGrid" />
        </ScrollViewer>
    </Grid>
</Window>

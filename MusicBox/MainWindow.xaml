<Window x:Class="MusicBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicBox"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        MouseWheel="Window_MouseWheel">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Playlists -->
        <StackPanel Grid.Column="0" Margin="5">
            <Label Content="Add Song From URL"/> <TextBox KeyDown="AddSongFromURL_KeyDown" />
            <Label Content="New Playlist"/> <TextBox KeyDown="NewPlaylist_KeyDown" />
            
            <Label Content="Playlists:"/>
            <ListBox Name="Playlists" SelectionChanged="Playlists_SelectionChanged" Margin="5" />
        </StackPanel>

        <!-- Playlist Contents -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <WrapPanel x:Name="ImageWrapPanel" Orientation="Horizontal" />
        </ScrollViewer>
    </Grid>
</Window>
